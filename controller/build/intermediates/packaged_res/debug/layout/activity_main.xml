<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:padding="20dp"
        android:text="停止"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_dark"
        android:padding="20dp"
        android:text="前进"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_stop"
        app:layout_constraintEnd_toEndOf="@+id/tv_stop"
        app:layout_constraintStart_toStartOf="@+id/tv_stop" />

    <TextView
        android:id="@+id/tv_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_dark"
        android:padding="20dp"
        android:text="后退"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/tv_stop"
        app:layout_constraintStart_toStartOf="@+id/tv_stop"
        app:layout_constraintTop_toBottomOf="@+id/tv_stop" />

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@android:color/holo_blue_dark"
        android:padding="20dp"
        android:text="向左"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_stop"
        app:layout_constraintEnd_toStartOf="@+id/tv_stop"
        app:layout_constraintTop_toTopOf="@+id/tv_stop" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@android:color/holo_blue_dark"
        android:padding="20dp"
        android:text="向右"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_stop"
        app:layout_constraintStart_toEndOf="@+id/tv_stop"
        app:layout_constraintTop_toTopOf="@+id/tv_stop" />


</android.support.constraint.ConstraintLayout>