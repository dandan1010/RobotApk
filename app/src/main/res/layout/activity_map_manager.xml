<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MapManagerActivity">

    <Button
        android:id="@+id/scanning_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫描地图"/>
    <Button
        android:id="@+id/cancel_scanning_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanning_map"
        android:text="取消地图"/>

<androidx.recyclerview.widget.RecyclerView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/map_recycler"
    android:layout_below="@id/cancel_scanning_map"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toRightOf="@id/scanning_map"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/map_icon"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/scanning_map_icon"
        android:src="@drawable/ic_launcher_background"
        />
</LinearLayout>
    <Button
        android:id="@+id/press_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="确认" />
</RelativeLayout>